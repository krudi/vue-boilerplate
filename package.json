{
    "name": "vue-template",
    "description": "A template with Nuxt3 built on Vue3 with focus on performance and best practices.",
    "licenses": [
        {
            "type": "MIT",
            "url": "https://github.com/krudi/vue-template/LICENSE"
        }
    ],
    "version": "0.1.0",
    "authors": [
        {
            "name": "krudi",
            "email": "patryk.kudlik@gmail.com",
            "url": "https://github.com/krudi/"
        }
    ],
    "private": false,
    "homepage": "https://github.com/krudi/vue-template#readme",
    "bugs": {
        "url": "https://github.com/krudi/vue-template/issues"
    },
    "keywords": [
        "template"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/krudi/vue-template.git"
    },
    "engines": {
        "node": ">= 20.11.0",
        "npm": ">= 10.8.1"
    },
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "start": "node .output/server/index.mjs",
        "lint:js": "eslint -c ./eslint.config.mjs",
        "lint:js:fix": "eslint -c ./eslint.config.mjs --fix",
        "lint:css": "stylelint --c ./stylelint.config.mjs **/*.css",
        "lint:css:fix": "stylelint -c ./stylelint.config.mjs --fix **/*.css",
        "lint:files": "prettier --check \"**/*.{html,graphql,yml,yaml,vue}\"",
        "lint:files:fix": "prettier --write \"**/*.{html,graphql,yml,yaml,vue}\"",
        "lint:full": "npm run lint:js && npm run lint:css && npm run lint:files",
        "lint:full:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:files:fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@nuxt/devtools": "^1.4.1",
        "@nuxt/eslint": "^0.5.2",
        "@nuxt/types": "^2.18.1",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^22.5.0",
        "@vite-pwa/nuxt": "^0.10.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-vue": "^9.27.0",
        "nuxt": "^3.13.0",
        "postcss": "^8.4.41",
        "postcss-custom-media": "^11.0.1",
        "postcss-import": "^16.1.0",
        "postcss-load-config": "^6.0.1",
        "postcss-nested": "^6.2.0",
        "prettier": "^3.3.3",
        "stylelint": "^16.8.2",
        "stylelint-config-standard": "^36.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.2.0",
        "vue-tsc": "^2.0.29"
    }
}
